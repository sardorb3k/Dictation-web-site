<!-- Modal Content Code -->
<div class="modal fade" tabindex="-1" id="create">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <a href="#" onclick="clearItem()" class="close" data-dismiss="modal" aria-label="Close">
                <em class="icon ni ni-cross"></em>
            </a>
            <div class="modal-header">
                <h5 class="modal-title">Diktant</h5>
            </div>
            <div class="modal-body">
                <form method="post" action="/admin/dictation" enctype="multipart/form-data">
                    <input type="hidden" name="id" id="id" value="0">
                    <div class="form-group">
                        <label class="form-label" for="header">Sarlavha</label>
                        <div class="form-control-wrap">
                            <input name="header" type="text" class="form-control" id="header">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="author">Sinf uchun:</label>
                        <div class="form-control-wrap">
                            <select class="form-control" name="className" id="class">
                                <option value="1-sinf">1-sinf</option>
                                <option value="2-sinf">2-sinf</option>
                                <option value="3-sinf">3-sinf</option>
                                <option value="4-sinf">4-sinf</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="author">Muallif</label>
                        <div class="form-control-wrap">
                            <input name="author" type="text" class="form-control" id="author">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="text">Matn</label>
                        <div class="form-control-wrap">
                            <textarea name="txt" class="form-control" id="text"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="lfile">Audiofayl</label>
                        <div class="form-control-wrap">
                            <div class="custom-file">
                                <input name="lfile" type="file" class="custom-file-input" id="lfile">
                                <label class="custom-file-label" for="lfile">Tanlash</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-lg btn-secondary" onclick="clearItem()" data-dismiss="modal" >Yopish</button>
                        <button type="submit" class="btn btn-lg btn-primary">Saqlash</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light">
                <span class="sub-text">Powered by Team Cyclone</span>
            </div>
        </div>
    </div>
</div>


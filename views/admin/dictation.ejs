<script>
    let editFunForm = (data) => {
        let frm = document.getElementById("tab-" + data);
        document.getElementById("id").value = frm.children[0].innerText
        document.getElementById("header").value = frm.children[2].innerText
        document.getElementById("class").value = frm.children[3].innerText
        document.getElementById("author").value = frm.children[4].innerText
        document.getElementById("text").value = frm.children[5].innerText
    }
</script>

<script>
    let clearItem = () => {
        document.getElementById("id").value = 0
        document.getElementById("header").value = ""
        document.getElementById("class").value = ""
        document.getElementById("author").value = ""
        document.getElementById("text").value = ""
    }
</script>

<script>
    let deleteDic = (data) => {
        if(confirm("Rostan ham o'chirmoqchimisiz?")){
            $.ajax({
                url:`/admin/dictation/${data}`,
                type:"DELETE",
                success: (res)=>{
                    alert("O'chirildi.")

                },
                error: (err)=>{
                    console.log(err)
                }
            })
            document.location.reload()
        }
        else
            alert("Bekor qilindi");
    }
</script>

